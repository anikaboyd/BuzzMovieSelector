<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="howimetyourmotherboard.buzzmovieselector.Home"
    tools:showIn="@layout/activity_home"
    android:background="#fdf5d4">


    <TextView
        android:layout_width="341dp"
        android:layout_height="125dp"
        android:textSize="30sp"
        android:id="@+id/question"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Your Profile"
        android:id="@+id/Profile"
        android:onClick="viewProfile"
        android:layout_below="@+id/newDVDs"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View New DVDs"
        android:id="@+id/newDVDs"
        android:onClick="newDVDs"
        android:layout_below="@+id/newMovies"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Your Ratings and Comments"
        android:id="@+id/yourMovies"
        android:onClick="viewMyMovies"
        android:layout_below="@+id/myRecommendations"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View New Movies"
        android:onClick="newMovies"
        android:id="@+id/newMovies"
        android:layout_below="@+id/question"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search for a Movie"
        android:onClick="search"
        android:id="@+id/searchMovies"
        android:layout_below="@+id/myRecommendations"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Recommendations"
        android:onClick="myRecs"
        android:id="@+id/myRecommendations"
        android:layout_below="@+id/Profile"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/logout"
        android:onClick="logout"
        android:layout_below="@+id/searchMovies"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
